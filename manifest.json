{
  "manifest_version": 2,
  "name": "Peek and Pop",
  "version": "1.0",

  "icons": {
    "16": "image.jfif",
    "48": "image.jfif",
    "128": "image.jfif"
  },

  "browser_action": {
    "default_icon": {
      "16": "image.jfif",
      "48": "image.jfif",
      "128": "image.jfif"
    },
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
