{
  "manifest_version": 2,
  "name": "Peek and Pop Extension",
  "version": "1.0",
  "description": "A browser extension that allows users to preview links by hovering over them.",
icons": {
    "16": "https://shop.evocorse.com/img/prd/RICAMBI//A5.000006.00_big_1.png",
    "48": "https://shop.evocorse.com/img/prd/RICAMBI//A5.000006.00_big_1.png",
    "128": "https://shop.evocorse.com/img/prd/RICAMBI//A5.000006.00_big_1.png"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  }
}
